<Window x:Class="PencilShop.Products"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PencilShop"
        mc:Ignorable="d"
        Title="Products" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox Height="50"></TextBox>
        <ScrollViewer MinHeight="450" MaxHeight="2000">
            <Grid x:Name="WorkGround" Height="2000" Loaded="WorkGround_Loaded"></Grid>
        </ScrollViewer>
    </Grid>
</Window>
